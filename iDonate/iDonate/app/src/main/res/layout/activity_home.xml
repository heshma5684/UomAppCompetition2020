<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/loginback">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="19dp"

        android:layout_alignEnd="@+id/guidelines"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="28dp"
        android:text="Welcome! You are logged in"
        app:layout_constraintBottom_toBottomOf="@+id/logout"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/guidelines"
        android:layout_width="196dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/how"
        android:text=""
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/AddEvent"
        android:layout_width="192dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/interested"
        android:text=""
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="202dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="129dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Click on icon below to listen for guidelines!"
        android:textSize="30dp"
        android:textStyle="bold|italic" />


</RelativeLayout>